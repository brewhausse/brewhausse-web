#!/bin/bash
#Run New Container
NAME=%CONTAINER_NAME%
IMAGE=%DOCKER_REPO%/${NAME}

docker stop ${NAME}
docker rm ${NAME}

docker run -p %PORT_MAPPING% -dt --name ${NAME} ${IMAGE}